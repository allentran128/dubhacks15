<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="yulongproductions.com.matchme.GameActivity"
                android:background="#ff7effb8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/adjHintText"
        android:hint="Match this adjective:"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/nameTextView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/adjTextView"
        android:layout_below="@+id/adjHintText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Magniloquent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Current User: Yulong"
        android:id="@+id/nameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="logout"
        android:id="@+id/logoutButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Define"
        android:id="@+id/defineButton"
        android:background="#ff7effb8"
        android:layout_below="@+id/adjTextView"
        android:layout_toLeftOf="@+id/adjHintText"
        android:layout_toStartOf="@+id/adjHintText"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose from gallery"
        android:id="@+id/uploadButton"
        android:layout_below="@+id/defineButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take a picture"
        android:id="@+id/cameraButton"
        android:layout_below="@+id/uploadButton"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_below="@+id/uploadButton"
        android:id="@+id/cameraImage"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/refreshButton"
        android:background="#ff7effb8"
        android:layout_above="@+id/uploadButton"
        android:layout_toRightOf="@+id/adjHintText"
        android:layout_toEndOf="@+id/adjHintText"/>
</RelativeLayout>
